<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/sysViewPagerIntroduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:listitem="@layout/lay_pager_item_webview" />

    <RelativeLayout
        android:id="@+id/viewPagerIndicator"
        android:layout_width="match_parent"
        android:background="#AA64E4"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/idIndicatorDotLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C38CF0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/idIndicatorDotLine"
            android:background="#00000000"
            android:gravity="center"
            android:padding="4dp">

            <com.rz.varnishview.introviewpager.ViewPagerIndicator
                android:id="@+id/sysViewPagerIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="0dp"
                app:delimiterSize="0dp"
                app:itemIcon="@drawable/white_circle"
                app:itemScale="1.9"
                app:itemSelectedTint="#7A22C2"
                app:itemSize="6dp"
                app:itemTint="#9342D5" />

            <com.rz.varnishview.introviewpager.PagerSkipNextButton
                android:id="@+id/sysViewPagerSkipNextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:btnBorderStyleGo="?android:attr/borderlessButtonStyle"
                app:btnBorderStyleNext="?android:attr/borderlessButtonStyle"
                app:btnBorderStyleSkip="?android:attr/borderlessButtonStyle"

                app:btnTextColorGo="#E0C0F9"
                app:btnTextColorNext="#E0C0F9"
                app:btnTextColorSkip="#E0C0F9"
                app:btnTextGo="Login"

                app:btnTextNext="Next"
                app:btnTextSizeGo="4dp"
                app:btnTextSizeNext="4dp"
                app:btnTextSizeSkip="4dp"
                app:btnTextSkip="Skip"
                app:iconPosition="TEXT_ONLY" />
            <!--app:myicon="@mipmap/ic_launcher"-->

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>